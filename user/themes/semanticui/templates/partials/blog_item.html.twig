{% set embed = embed|default(false) %}
<div class="ui top attached segment">
    {% if page.header.link %}
        <h2 class="ui header">
            {% if page.header.continue_link is not sameas(false) %}
                <a href="{{ page.url }}"><i class="fa fa-angle-double-right"></i></a>
            {% endif %}
            <a href="{{ page.header.link }}">{{ page.title }}</a>
        </h2>
    {% else %}
        <h2 class="ui header"><a href="{{ page.url }}">{{ page.title }}</a></h2>
    {% endif %}
</div>
<div class="ui attached segment">
    <div class="content">
        <div class="description">
            {% if truncate %}
                {{ page.summary }}

                <a href="{{ page.url }}">Weiter lesenâ€¦</a>
            {% else %}
                {{ page.content }}
            {% endif %}
        </div>
    </div>
</div>
<div class="ui attached segment">
    <div class="meta">
        <div class="ui mini compact labeled icon button">
            <i class="calendar icon"></i>
            {{ page.date|date("Y-m-d") }}
        </div>
        {% if page.taxonomy.tag %}
            {% for tag in page.taxonomy.tag %}
                <a class="ui mini compact labeled icon button"
                   href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">
                    <i class="tag icon"></i>
                    {{ tag }}
                </a>
            {% endfor %}
        {% endif %}
    </div>
</div>
{% if not embed %}
    <div class="ui bottom attached segment" id='discourse-comments'></div>

    <script type="text/javascript">
        DiscourseEmbed = {
            discourseUrl: 'https://discourse.datenknoten.me/',
            discourseEmbedUrl: 'https://datenknoten.me{{ page.url }}'
        };

        (function () {
            var d = document.createElement('script');
            d.type = 'text/javascript';
            d.async = true;
            d.src = DiscourseEmbed.discourseUrl + 'javascripts/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(d);
        })();
    </script>
{% endif %}
